<section id="container">
  <section>
    <table>
      <thead>
        <%= t('cards.all_cards') %>
      </thead>
      <tbody>
        <% @cards.each do |card| %>
          <tr>
            <td><%= card.original_text %></td>
            <td><%= card.translated_text %></td>
            <td><%= card.success_counter %></td>
            <td><%= card.fail_counter %></td>
            <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
            <td><%= link_to t('forms.links.show'), card %></td>
            <td><%=link_to t('forms.links.edit'), edit_card_path(card) %></td>
            <td><%= link_to t('forms.links.delete'), card, method: :delete, data: { confirm: t('forms.links.confirm') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</section>
