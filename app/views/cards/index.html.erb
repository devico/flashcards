<section id="container">
  <section>
    <table>
	  <thead>
	    Все карточки
      </thead>
	  <tbody>
	    <% @cards.each do |card| %>
		  <tr>
		    <td><%= card.original_text %></td>
		    <td><%= card.translated_text %></td>
                  <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
                 <td><%= link_to 'Показать', card %></td>
                 <td><%=link_to 'Редактировать', edit_card_path(card) %></td>
                 <td><%= link_to 'Удалить', card, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
		  </tr>
	    <% end %>
	  </tbody>
    </table>
  </section>
</section>
