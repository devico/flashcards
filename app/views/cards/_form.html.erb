<%= simple_form_for @card do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>
      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= f.input :deck_id, label: Deck.human_attribute_name(:name), collection: @decks.map { |d| [d.name, d.id] },:include_blank => false %>
  <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
  <%= f.input :original_text, label: Card.human_attribute_name(:original_text) %>
  <%= f.input :translated_text , label: Card.human_attribute_name(:translated_text) %>
  <%= f.input :review_date, as: :date, label: Card.human_attribute_name(:review_date), input_html: {class: "medium-12 columns"} %>
  <%= f.input :image, as: :file, label: t('cards.image') %>
  <%= f.button :submit %>
<% end %>
