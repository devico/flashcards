<section id="container">
  <section>
  <div class="painting">
    <p id="notice"><%= notice %></p>
    <p><strong><%= t('cards.notice_create') %></strong></p>
    <p>Deck name: <%= @card.deck.name %></p>
    <p>Original text: <%= @card.original_text %></p>
    <p>Translated text: <%= @card.translated_text %></p>
    <p>Card image: </p>
    <%= image_tag @card.image_url(:thumb).to_s %>
    <div class="actions">
      <%= link_to t('forms.links.back'), cards_path %>
      <%= link_to t('cards.edit_card'), edit_card_path(@card) %>
      <%= link_to t('cards.delete_card'), @card, method: :delete, data: { confirm: t('forms.links.confirm') } %>
    </div>
  </div>
  </section>
</section>
