<section id="container">
  <section>
  <div class="painting">
    <p id="notice"><%= notice %></p>
    <p><strong><%= t('cards.notice') %></strong></p>
    <p>
      <%= Deck.human_attribute_name(:name) %>
      <%= @card.deck.name %>
    </p>
    <p>
      <%= Card.human_attribute_name(:original_text) %> 
      <%= @card.original_text %>
    </p>
    <p>
      <%= Card.human_attribute_name(:translated_text) %>
      <%= @card.translated_text %>
    </p>
    <%= image_tag @card.image_url(:thumb).to_s %>
    <div class="actions">
      <%= link_to t('links.back'), home_cards_path %>
      <%= link_to t('cards.edit'), edit_home_card_path(@card) %>
      <%= link_to t('cards.delete'), home_card_path(@card), method: :delete, data: { confirm: t('links.confirm') } %>
    </div>
  </div>
  </section>
</section>
