<section id="container">
  <section>
    <h1><%= t('user.edit_profile')%></h1>

    <%= simple_form_for current_user do |f| %>
      <% if current_user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% current_user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
      <%= f.input :email, label: t('user.email') %>
      <%= f.input :password , label: t('user.password') %>
      <%= f.input :password_confirmation, label: t('user.confirm_password') %>
      <%= f.input :locale, as: :select, collection: I18n.available_locales %>
      <%= f.submit %>
    <% end %>
  </section>
</section>
